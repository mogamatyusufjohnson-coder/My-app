import zipfile import os

Create folder structure

os.makedirs('my-app/lib', exist_ok=True) os.makedirs('my-app/assets', exist_ok=True) os.makedirs('my-app/android', exist_ok=True) os.makedirs('my-app/ios', exist_ok=True)

Create main.dart

with open('my-app/lib/main.dart', 'w') as f: f.write(''' import 'package:flutter/material.dart';

void main() { runApp(MyApp()); }

class MyApp extends StatelessWidget { @override Widget build(BuildContext context) { return MaterialApp( title: 'My App', home: Scaffold( appBar: AppBar(title: Text('My App')), body: Center(child: Text('Hello World!')), ), ); } } ''')

Create pubspec.yaml

with open('my-app/pubspec.yaml', 'w') as f: f.write(''' name: my_app description: A Flutter project publish_to: 'none' version: 1.0.0+1

environment: sdk: '>=2.19.0 <3.0.0'

dependencies: flutter: sdk: flutter

dev_dependencies: flutter_test: sdk: flutter

flutter: uses-material-design: true assets: - assets/ ''')

Create .gitignore

with open('my-app/.gitignore', 'w') as f: f.write(''' build/ .dart_tool/ .packages .pub-cache/ .idea/ *.iml ''')

Create README.md

with open('my-app/README.md', 'w') as f: f.write('# My App\nThis is a Flutter project ready to build.')

Create ZIP

with zipfile.ZipFile('my-app.zip', 'w') as zipf: for root, dirs, files in os.walk('my-app'): for file in files: zipf.write(os.path.join(root, file), os.path.relpath(os.path.join(root, file), 'my-app'))

print('my-app.zip created!')

